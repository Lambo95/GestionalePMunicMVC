@model IEnumerable<GestionalePMunicMVC.Models.Violazione>

@{
    ViewBag.Title = "ViolazioniView";
}

<h2>Violazioni</h2>
<p>
    @Html.ActionLink("Create New", "CreateViolazione")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdViolazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdViolazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrizione)
        </td>
       
    </tr>
}

</table>
